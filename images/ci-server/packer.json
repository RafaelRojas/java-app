{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": "",
      "aws_region": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "source_ami_filter": {
          "filters": {
            "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "encrypt_boot": true,
        "ami_name": "ubuntu-jenkins_server-{{timestamp}}",
        "ami_description": "A Ubuntu 18.04 LTS based Java/Spring Jenkins server.",
        "tags": {
          "Name": "ubuntu-java-{{timestamp}}",
          "ubuntu:release": "18.04 LTS",
          "ubuntu:branch": "bionic"
        },
        "launch_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_size": 10,
            "volume_type": "gp2",
            "delete_on_termination": "true"
          }
        ],
        "ami_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_size": 30,
            "volume_type": "gp2",
            "delete_on_termination": "true"
          }
        ]
      }
    ],
  
    "provisioners": [
      {
        "type": "ansible",
        "ansible_env_vars": [ "ANSIBLE_HOST_KEY_CHECKING=False", "ANSIBLE_SSH_ARGS='-o ForwardAgent=yes -o ControlMaster=auto -o ControlPersist=60s'", "ANSIBLE_NOCOLOR=True" ],
        "playbook_file": "../ansible/ci-server_config.yml"
      }
    ]
  }
